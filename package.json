{
  "name": "arbutus",
  "description": "Documentation site UI library",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "components/*",
    "hooks/*",
    "styles/*"
  ],
  "scripts": {
    "build:packages": "lage build --scope @arbutus/*",
    "build:storybook": "build-storybook -o docs",
    "g:component": "run-s hygen:component packages:fix-mismatches i",
    "g:hook": "run-s hygen:hook packages:fix-mismatches i",
    "hygen:component": "hygen new component",
    "hygen:hook": "hygen new hook",
    "i": "npm i",
    "lint:eslint": "eslint . --fix",
    "lint:prettier": "prettier --write .",
    "lint:root": "run-s lint:eslint lint:prettier",
    "lint:staged": "lint-staged",
    "lint": "lage lint",
    "packages:fix-mismatches": "syncpack fix-mismatches",
    "purge": "git clean -d -f -X -e .env -e .husky",
    "reset": "run-s purge i build:packages",
    "start": "start-storybook -p 6006"
  },
  "devDependencies": {
    "@arbutus/style.theming": "0.0.1",
    "@fluentui/react": "^8.86.3",
    "@griffel/react": "^1.3.0",
    "@m365-admin/config.ts": "^0.1.2",
    "@m365-admin/eslint-config": "^0.1.4",
    "@m365-admin/utility.changelog-helper": "^1.0.4",
    "@storybook/addon-actions": "^6.5.10",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/addon-interactions": "^6.5.10",
    "@storybook/addon-links": "^6.5.10",
    "@storybook/builder-vite": "^0.2.2",
    "@storybook/jest": "^0.0.10",
    "@storybook/react": "^6.5.10",
    "@storybook/testing-library": "^0.0.13",
    "assert": "^2.0.0",
    "beachball": "^2.26.1",
    "cross-env": "7.0.3",
    "esbuild": "^0.14.54",
    "eslint": "^8.21.0",
    "husky": "^8.0.1",
    "hygen": "^6.2.8",
    "lage": "^1.7.2",
    "lint-staged": "^13.0.3",
    "npm-run-all": "4.1.5",
    "prettier": "^2.7.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "syncpack": "^8.2.4",
    "wait-on": "6.0.1"
  },
  "syncpack": {
    "semverRange": [
      "<=",
      ">="
    ],
    "workspace": true,
    "peer": false
  },
  "resolutions": {
    "**/trim": "^1.0.0"
  },
  "engines": {
    "node": "16.15.1"
  }
}
