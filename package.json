{
  "name": "arbutus",
  "description": "Documentation site UI library",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "components/*",
    "hooks/*",
    "styles/*",
    "utilities/*"
  ],
  "scripts": {
    "build:packages": "lage build",
    "build:storybook": "build-storybook -o docs",
    "g:component": "run-s hygen:component packages:fix-mismatches i",
    "g:hook": "run-s hygen:hook packages:fix-mismatches i",
    "hygen:component": "hygen new component",
    "hygen:hook": "hygen new hook",
    "i": "npm i",
    "lint:eslint": "eslint . --fix",
    "lint:prettier": "prettier --write .",
    "lint:root": "run-s lint:eslint lint:prettier",
    "lint:staged": "lint-staged",
    "lint": "lage lint",
    "packages:fix-mismatches": "syncpack fix-mismatches",
    "purge": "git clean -d -f -X -e .env -e .husky",
    "reset": "run-s purge i build:packages",
    "start": "start-storybook -p 6006"
  },
  "devDependencies": {
    "@griffel/react": "^1.3.1",
    "@microsoft/arbutus.aside-navigation": "0.0.1",
    "@microsoft/arbutus.bookmark-tile": "0.0.1",
    "@microsoft/arbutus.icon": "0.0.1",
    "@microsoft/arbutus.link": "0.0.1",
    "@microsoft/arbutus.mark-list": "0.0.1",
    "@microsoft/arbutus.recommendation-tile": "0.0.1",
    "@microsoft/arbutus.tabs": "0.0.1",
    "@microsoft/arbutus.text": "0.0.1",
    "@microsoft/arbutus.theming": "0.0.1",
    "@microsoft/arbutus.tile": "0.0.1",
    "@microsoft/arbutus.ts": "^0.0.1",
    "@rnx-kit/eslint-plugin": "^0.2.13",
    "@storybook/addon-actions": "^6.5.10",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/addon-interactions": "^6.5.10",
    "@storybook/addon-links": "^6.5.10",
    "@storybook/builder-vite": "^0.2.2",
    "@storybook/builder-webpack5": "^6.5.10",
    "@storybook/jest": "^0.0.10",
    "@storybook/manager-webpack5": "^6.5.10",
    "@storybook/react": "^6.5.10",
    "@storybook/testing-library": "^0.0.13",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "assert": "^2.0.0",
    "beachball": "^2.30.1",
    "cross-env": "7.0.3",
    "esbuild": "^0.15.7",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-deprecation": "^1.3.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "husky": "^8.0.1",
    "hygen": "^6.2.10",
    "lage": "^1.8.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "4.1.5",
    "prettier": "^2.7.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "syncpack": "^8.2.4",
    "typescript": "^4.8.2",
    "vite": "^3.1.0",
    "wait-on": "6.0.1",
    "webpack": "^5.74.0"
  },
  "syncpack": {
    "semverRange": [
      "<=",
      ">="
    ],
    "workspace": true,
    "peer": false
  },
  "resolutions": {
    "**/trim": "^1.0.0"
  },
  "engines": {
    "node": "16.15.1"
  }
}
