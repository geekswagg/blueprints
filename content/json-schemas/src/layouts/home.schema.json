{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "layouts/home.schema.json",
  "title": "JSON Schema for Home Page",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to the json schema which the document will be validated by."
    },
    "_layout": {
      "type": "string",
      "enum": [ "home" ],
      "description": "Type of layout."
    },
    "_isSingleton": {
      "type": "boolean"
    },
    "title": {
      "type": "string",
      "description": "Title of the page."
    },
    "leading": {
      "type": "string",
      "description": "Leading description of the page."
    },
    "statements": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "properties": {
          "headline": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "articles": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "image": {
            "type": "object",
            "properties": {
              "src": {
                "type": "string"
              },
              "alt": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    }
  },
  "required": [ "_layout", "_isSingleton" ],
  "additionalProperties": false
}