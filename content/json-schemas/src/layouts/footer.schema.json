{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "layouts/footer.schema.json",
  "title": "JSON Schema for Footer Page",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to the json schema which the document will be validated by."
    },
    "_layout": {
      "type": "string",
      "enum": [ "footer" ],
      "description": "Type of layout."
    },
    "_isSingleton": {
      "type": "boolean"
    },
    "primaryLinks": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "properties": {
          "to": {
            "type": "string"
          },
          "text": {
            "type": "string"
          },
          "isExternal": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    },
    "secondaryLinks": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "properties": {
          "to": {
            "type": "string"
          },
          "text": {
            "type": "string"
          },
          "isExternal": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "required": [ "_layout", "_isSingleton" ],
  "additionalProperties": false
}