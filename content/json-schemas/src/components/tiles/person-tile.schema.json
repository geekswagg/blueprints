{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "components/tiles/person-tile.schema.json",
  "title": "JSON Schema for person tile component",
  "type": "object",
  "properties": {
    "contentComponentId": {
      "type": "string",
      "enum": [ "tiles.person-tile" ]
    },
    "firstName": {
      "type": "string",
      "description": "The person's first name."
    },
    "lastName": {
      "type": "string",
      "description": "The person's last name."
    },
    "role": {
      "type": "string",
      "description": "The person's role."
    },
    "to": {
      "type": "string",
      "description": "The URL of the page the tile goes to."
    },
    "isExternal": {
      "type": "boolean",
      "description": ""
    },
    "icon": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "description": "The path to the image file."
        },
        "alternativeText": {
          "type": ["string", "null"],
          "description": "The alt text for the image."
        }
      },
      "additionalProperties": false
    },
    "avatar": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "description": "The path to the image file."
        },
        "alternativeText": {
          "type": ["string", "null"],
          "description": "The alt text for the image."
        }
      },
      "additionalProperties": false
    }
  },
  "required": [ "contentComponentId", "firstName", "lastName", "to" ],
  "additionalProperties": false
}