{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "components/others/image.schema.json",
  "title": "JSON Schema for image component (inlined in layout schemas)",
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "description": "The path to the image file."
        },
        "alternativeText": {
          "type": [ "string", "null" ],
          "description": "The alt text for the image."
        },
        "caption": {
          "type": [ "string", "null" ],
          "description": "The caption for the image."
        }
      },
      "required": [ "url" ],
      "additionalProperties": false
    }
  },
  "required": [ "image" ],
  "additionalProperties": false
}
