{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "common/image.schema.json",
  "title": "JSON Schema for image component",
  "type": ["object", "null"],
  "properties": {
    "src": {
      "type": "string",
      "description": "The path to the image file."
    },
    "alternativeText": {
      "type": ["string", "null"],
      "description": "The alt text for the image."
    }
  },
  "required": ["src"],
  "additionalProperties": false
}
